<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="samohina_custom_price" translate="label" sortOrder="10">
            <label>Samohina CustomPrice</label>
        </tab>
        <section id="samohina_custom_price" translate="label" sortOrder="130"
                 showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Samohina CustomPrice</label>
            <tab>samohina_custom_price</tab>
            <resource>Samohina_CustomPrice::custom_price_config</resource>
            <group id="general" translate="label" type="text"
                   sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration CustomPrice</label>
                <field id="enable" translate="label" type="select"
                       sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="persent_custom_price" translate="label" type="text"
                       sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Percent custom price</label>
                    <comment>Percent</comment>
                </field>
            </group>
        </section>
    </system>
</config>
