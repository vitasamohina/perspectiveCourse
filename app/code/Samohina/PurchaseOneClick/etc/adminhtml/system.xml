                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="shipmentlist" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Default Shipping for PurchaseOneClick</label>
                    <source_model>Samohina\PurchaseOneClick\Model\Config\Source\Shiplist</source_model>
                </field>
                <field id="paymentlist" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Default Payment for PurchaseOneClick</label>
                    <source_model>Samohina\PurchaseOneClick\Model\Config\Source\Paylist</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
