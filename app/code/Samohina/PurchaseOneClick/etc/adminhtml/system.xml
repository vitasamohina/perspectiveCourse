<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="purchase_one_click" translate="label" sortOrder="10">
            <label>PurchaseOneClick</label>
        </tab>
        <section id="purchase_one_click" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>PurchaseOneClick</label>
            <tab>purchase_one_click</tab>
            <resource>Samohina_PurchaseOneClick::oneclick_config</resource>
